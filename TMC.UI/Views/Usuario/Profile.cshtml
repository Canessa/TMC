@model TMC.DATA.TbUsuarios

@{
    ViewBag.Title = "Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (TMC.DATA.TbUsuarios.IDRolUsuarioActual == 1)
{

    Response.Redirect(Url.Action("Admin_Users", "TbUsuarios"));
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        alert("@Html.Raw(@ViewBag.Message)");
        window.location = "/Usuario/Profile";
    </script>
}

<head>
    <title>Perfil de usuario </title>
    <link rel="stylesheet" type="text/css" href="~/Estilos/EstilosGeneral.css">
</head>


<div>
    <div class="container">
        <div class="main-body">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="main-breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">Perfil</li>
                </ol>
            </nav>
            <!-- /Breadcrumb -->

            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="@Model.foto" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>@Html.DisplayFor(model => model.nombre)</h4>
                                    <p class="text-secondary mb-1">@ViewBag.Rol</p>
                                    <p class="text-muted font-size-sm">Costa Rica, San Jose, DS</p>
                                    @*Botones clientes*@
                                    <br>
                                    @Html.ActionLink("Compras", "ComprasUsuario", "TbCompras", new { id = Model.IDUsuario }, new { @class = "btn btn-outline-btn" })
                                    <br>
                                    @Html.ActionLink("Cuenta", "DetailClient", "TbUsuarios", new { id = Model.IDUsuario }, new { @class = "btn btn-outline-btn" })
                                    <br>
                                    @Html.ActionLink("Restablecer Contraseña", "Reset_Password_CurrentUser", "Usuario", new { @class = "btn btn-outline-btn" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @*Información del evento*@
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="container">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">Progreso</i>del evento</h6>
                                            @*<small>Progreso del evento</small>
                                                <div class="progress mb-3" style="height: 5px;">
                                                    <div class="progress-bar bg-event" role="progressbar" style="width: 80%; " aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" ;></div>
                                                </div>*@
                                            <div class="row">
                                                <div class="col-sm-3">
                                                    <h6 class="mb-0">Cantidad de invitados</h6>
                                                </div>

                                                <div class="col-sm-9 text-secondary">
                                                    100
                                                </div>
                                            </div>
                                            <hr>
                                            <div class="row">
                                                <div class="col-sm-3">
                                                    <h6 class="mb-0">Fecha de evento</h6>
                                                </div>
                                                <div class="col-sm-9 text-secondary">
                                                    15/12/2020
                                                </div>
                                            </div>
                                            <hr>


                                            <div class="row">
                                                <div class="col-sm-3">
                                                    <h6 class="mb-0">Lugar de evento</h6>
                                                </div>
                                                <div class="col-sm-9 text-secondary">
                                                    Heredia
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <br />
                            <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">Informacion de</i>Usuario</h6>


                            @* Información de usuario*@
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Nombre Completo</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Html.DisplayFor(model => model.nombre, new { @class = "control-label col-md-2" })
                                    @Html.DisplayFor(model => model.apellidos, new { @class = "control-label col-md-2" })
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Cédula</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Html.DisplayFor(model => model.cedula, new { @class = "control-label col-md-2" })
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Html.DisplayFor(model => model.correo, new { @class = "control-label col-md-2" })
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Telefono</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Html.DisplayFor(model => model.telefono, new { @class = "control-label col-md-2" })
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Direccion</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    Costa Rica, San Jose, DS
                                </div>
                            </div>
                            <br />



                            <br />
                            <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">Servicios</i>Adquiridos</h6>
                            @*Servicios parte inferior*@
                            @foreach (var servicio in Model.serviciosContratados)
                            {
                                <div class="row" style="margin-left:0%; margin-top:10px">
                                    <div class="container row">
                                        <div class="card h-100 col-sm-8">
                                            <div class="card-body">
                                                <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">@servicio.nombre</i></h6>
                                                <div class="row">
                                                    <div class="col-sm-12">
                                                        <h6>@servicio.detalle</h6>
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <h6 class="mb-0">Catalogo</h6>
                                                    </div>
                                                    <div class="col-sm-9 text-secondary">
                                                        #@servicio.IDCatalogo
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <h6 class="mb-0">Precio</h6>
                                                    </div>
                                                    <div class="col-sm-9 text-secondary">
                                                        &#8353;@servicio.precio
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="card h-100 col-sm-4" style="padding: 20px;">
                                            <img src="@servicio.foto" style="height: 200px;">
                                        </div>
                                    </div>
                                </div>
                            }


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





