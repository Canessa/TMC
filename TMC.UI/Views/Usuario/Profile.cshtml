@model TMC.DATA.TbUsuarios


@{
    ViewBag.Title = "Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper" ; style="color:black;">
    <h2>Perfil</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">

    <div class="row no-gutters">
        <div class="col-md-4">

            <img src="~/Imgs/logo.png" class="Userphoto" />

            <div class="form-group">
                <br>
                <input type="submit" value="Información" class="btn btn-outline-danger" />
                <br>
                <input type="submit" value="Compras" class="btn btn-outline-danger" />
                <br>
                <input type="submit" value="Cuenta" class="btn btn-outline-danger" />
            </div>
        </div>


        <div class="col-md-8">
            <div class="card-body">
                <h3 class="card-subtitle">Progreso del Evento</h3>
                <p>
                    Aqui ira el progreso
                </p>
            </div>

            <div class="card-body">
                <div class="form-group">
                    @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })

                    @Html.LabelFor(model => model.apellidos, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.correo, htmlAttributes: new { @class = "control-label col-md-2" })

                    @Html.LabelFor(model => model.telefono, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
            </div>
        </div>
    </div>



</div>

    }
</div>

