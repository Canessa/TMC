@model TMC.DATA.TbUsuarios


@{
    ViewBag.Title = "Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Perfil de usuario </title>
    <link rel="stylesheet" type="text/css" href="~/Estilos/EstilosGeneral.css">
</head>


<div>
    <div class="container">
        <div class="main-body">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="main-breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">Perfil</li>
                </ol>
            </nav>
            <!-- /Breadcrumb -->

            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>@Html.DisplayFor(model => model.nombre)</h4>
                                    <p class="text-secondary mb-1">@ViewBag.Rol</p>
                                    <p class="text-muted font-size-sm">Costa Rica, San Jose, DS</p>
                                    @*Botones clientes*@
                                    <br>
                                    @Html.ActionLink("Compras", "ComprasUsuario", "TbCompras", new { id = Model.IDUsuario }, new { @class = "btn btn-outline-btn" })
                                    <br>
                                    @Html.ActionLink("Cuenta", "DetailClient", "TbUsuarios", new { id = Model.IDUsuario }, new { @class = "btn btn-outline-btn" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-3">
                        <ul class="list-group list-group-flush">


                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram mr-2 icon-inline text-danger">
                                        <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                                        <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                                        <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                                    </svg>Instagram
                                </h6>
                                <span class="text-secondary">Usuario</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary">
                                        <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                                    </svg>Facebook
                                </h6>
                                <span class="text-secondary">Usuario</span>
                            </li>
                        </ul>
                    </div>
                </div>

                @*Información del evento*@
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">



                            <div class="row">
                                <div class="container">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">Progreso</i>del evento</h6>
                                            <small>Progreso del evento</small>
                                            <div class="progress mb-3" style="height: 5px;">
                                                <div class="progress-bar bg-event" role="progressbar" style="width: 80%; " aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" ;></div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-3">
                                                    <h6 class="mb-0">Cantidad de invitados</h6>
                                                </div>

                                                <div class="col-sm-9 text-secondary">
                                                    100
                                                </div>
                                            </div>
                                            <hr>
                                            <div class="row">
                                                <div class="col-sm-3">
                                                    <h6 class="mb-0">Fecha de evento</h6>
                                                </div>
                                                <div class="col-sm-9 text-secondary">
                                                    dd/mm/yy
                                                </div>
                                            </div>
                                            <hr>


                                            <div class="row">
                                                <div class="col-sm-3">
                                                    <h6 class="mb-0">Lugar de evento</h6>
                                                </div>
                                                <div class="col-sm-9 text-secondary">
                                                    Heredia
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <br />
                            <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">Informacion de</i>Usuario</h6>


                            @* Información de usuario*@
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Nombre Completo</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Html.DisplayFor(model => model.nombre, new { @class = "control-label col-md-2" })
                                    @Html.DisplayFor(model => model.apellidos, new { @class = "control-label col-md-2" })
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Cédula</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Html.DisplayFor(model => model.cedula, new { @class = "control-label col-md-2" })
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Html.DisplayFor(model => model.correo, new { @class = "control-label col-md-2" })
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Telefono</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Html.DisplayFor(model => model.telefono, new { @class = "control-label col-md-2" })
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Direccion</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    Costa Rica, San Jose, DS
                                </div>
                            </div>
                            <br />




                            @*Servicios parte inferior*@
                            <div class="container">
                                <div class="row">
                                    @*Columna 1*@
                                    <div class="col-md-3">
                                        <div class="panel panel-info">
                                            <div class="panel-heading">
                                                <h3 class="text-center">Estilista</h3>

                                            </div>
                                            <div class="panel-body text-center">

                                                <div class="d-flex flex-column align-items-center text-center">
                                                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="60">
                                                </div>
                                            </div>
                                            <div class="mb-0 text-center">
                                                Mauro Barrios
                                            </div>
                                            <div class="progress mb-3" style="height: 20px;">
                                                <div class="progress-bar bg-event" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>
                                    @*Columna 2*@
                                    <div class="col-md-3">
                                        <div class="panel panel-info">
                                            <div class="panel-heading">
                                                <h3 class="text-center">Modista</h3>

                                            </div>
                                            <div class="panel-body text-center">

                                                <div class="d-flex flex-column align-items-center text-center">
                                                    <img src="https://bootdey.com/img/Content/avatar/avatar3.png" alt="Admin" class="rounded-circle" width="60">
                                                </div>
                                            </div>
                                            <div class="mb-0 text-center">
                                                Juana Fonseca
                                            </div>
                                            <div class="progress mb-3" style="height: 20px;">
                                                <div class="progress-bar bg-event" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>
                                    @*Columna 3*@
                                    <div class="col-md-3">
                                        <div class="panel panel-info">
                                            <div class="panel-heading">
                                                <h3 class="text-center">Fotógrafo</h3>

                                            </div>
                                            <div class="panel-body text-center">

                                                <div class="d-flex flex-column align-items-center text-center">
                                                    <img src="https://bootdey.com/img/Content/avatar/avatar5.png" alt="Admin" class="rounded-circle" width="60">
                                                </div>
                                            </div>
                                            <div class="mb-0 text-center">
                                                Erick Mena
                                            </div>
                                            <div class="progress mb-3" style="height: 20px;">
                                                <div class="progress-bar bg-event" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





