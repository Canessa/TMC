@model TMC.UI.Models.LoginViewModel

@{
    ViewBag.Title = "Iniciar Sesión";
}
@using (Html.BeginForm())
{
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="main-breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Iniciar Sesion</li>


        </ol>
    </nav>
    <!-- /Breadcrumb -->


   

    <div class="row">
        <div class="col-4">
            <div class="form-horizontal" style="color:black; background-color:#DD969C; opacity:0.8;border-radius:18px">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @ViewBag.mensaje

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="btn-toolbar, col-md-offset-2 col-md-10">

                    @*@Html.ActionLink("Enviar", "Reset_Password", "Usuario", new { id = @Html.DisplayFor(model => model.Email) })*@

                    <input type="submit" value="Enviar Contraseña" class="btn btn-dark btn-sm" />
                    @Html.ActionLink("Regresar", "Login", "Usuario", new { @class = "btn btn-dark btn-sm" })
                </div>
                <br />

            </div>
        </div>
    </div>


}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
