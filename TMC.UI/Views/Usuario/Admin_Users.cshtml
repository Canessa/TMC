                            <a href="" class="btn btn-primary"><i class="material-icons">&#xE24D;</i> <span>Exportar a excel</span></a>
                        </div>
                    </div>
                </div>

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Rol</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td><a href="#"><img src="~/Imgs/logo.png" class="avatar" alt="Avatar"> Michael Holz</a></td>
                            <td>Administrador</td>
                            <td>
                                <a href="#" class="settings" title="Editar" data-toggle="tooltip"><span class="material-icons">edit</span></a>
