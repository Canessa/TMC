@model IEnumerable<TMC.DATA.TbRoles>

@{
    ViewBag.Title = "Administrar Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Estilos/EstilosGeneral.css">
    <link rel="stylesheet" type="text/css" href="~/Estilos/EstilosAdmin.css">
    <link rel="stylesheet" type="text/css" href="~/Estilos/EstilosBarraAdmin.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
</head>
<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="main-breadcrumb">
    <ol class="breadcrumb">
        <div class="navbar1">
            <div class="dropdown1">
                <button class="dropbtn1" style=" color: rgba(255, 255, 255, 0.5);">
                    <nav aria-label="breadcrumb" class="main-breadcrumb" style="color:black">
                        <a class="breadcrumb-item active" aria-current="page">
                            <span>
                                <i class="material-icons">menu</i>
                                Administrar Roles
                            </span>
                        </a>
                    </nav>
                </button>
                <div class="dropdown1-content1">
                    @Html.ActionLink("Administrar Catalogos", "Admin_Catalogos", "TbCatalogos", null, new { @class = "nav-link" })
                    @Html.ActionLink("Administrar Compras", "Admin_Compras", "TbCompras", null, new { @class = "nav-link" })
                    @Html.ActionLink("Administrar Citas", "Admin_Citas", "TbCitas", null, new { @class = "nav-link" })
                    @Html.ActionLink("Administrar Roles", "Admin_Roles", "TbRoles", null, new { @class = "nav-link" })
                    @Html.ActionLink("Administrar Usuarios", "Admin_Users", "TbUsuarios", null, new { @class = "nav-link" })
                    @Html.ActionLink("Administrar Servicios", "Admin_Servicios", "TbServicios", null, new { @class = "nav-link" })
                </div>
            </div>
        </div>
    </ol>
</nav>
<!-- /Breadcrumb -->


@if (TMC.DATA.TbUsuarios.IDRolUsuarioActual == 2)
{
    Response.Redirect(Url.Action("Index", "Home"));
}
<body id="estiloAdmin">
    <div class="container">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row" style=" margin-left: 82%;">
                        <a href="@Url.Action( "Create", "TbRoles")" class="btn btn-primary">
                            <i class="material-icons">&#xE147;</i>
                            <span>
                                Agregar Nuevo Rol
                            </span>
                        </a>
                    </div>
                </div>
                <table id="example" class="table table-striped table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.IDRol)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.detalle)
                            </th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => item.IDRol)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.detalle)
                            </td>
                            <td>
                                <a href="@Url.Action( "Edit", "TbRoles", new { id = @Html.DisplayFor(model => item.IDRol) })" class="settings" title="Editar" data-toggle="tooltip" value="Editar">
                                    <span class="material-icons">edit</span>
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</body>

<script>
    $(document).ready(function () {
        $('#example').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
            }
        });
    });
</script>

