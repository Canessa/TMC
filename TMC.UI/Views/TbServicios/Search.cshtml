

@{
    ViewBag.Title = "Servicios";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model IEnumerable<TMC.DATA.TbServicios>
}
<style>
    .img-card-view {
        width: 100%
    }

    .card-columns {
        column-count: 1;
    }
    }
</style>
<h2>Servicios</h2>
<div class="card-columns" style="margin-left: 19%; margin-top: 3%;">
    @foreach (var item in Model)
    {
        if (item.estado)
        {
            <div class="card" style="width: 25%;margin-top: 2%;margin-right: 1%;">
                <img src="@item.foto" class="img-card-view" />
                <div class="card-body">
                    <h5 class="card-title">@item.nombre</h5>
                    <p class="card-text">@item.detalle</p>
                    <p class="card-text" style="font-weight: 800;font-size: 20px;">&#8353;@item.precio</p>
                </div>
                <div class="card-footer" style="padding: 0;">
                   <button class="btn btn-success" style="width: 100%;height: 70px;">
            <a href="@Url.Action( "Agendar_Servicio", "TbServicios",new { id = @Html.DisplayFor(model => item.IDServicio) })">
                Agendar
            </a>
        </button>




                </div>
            </div>
        }
    }
        <script src="https://kit.fontawesome.com/065c8b2d38.js" crossorigin="anonymous"></script>
