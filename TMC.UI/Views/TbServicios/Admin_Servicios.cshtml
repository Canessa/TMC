
@model IEnumerable<TMC.DATA.TbServicios>


@{
    ViewBag.Title = "Administrar Servicios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>

    <title>Tabla Administrador de servicios </title>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Estilos/EstilosGeneral.css">
    <link rel="stylesheet" type="text/css" href="~/Estilos/EstilosAdmin.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">

</head>
<body id="estiloAdmin">
    <div class="container">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="navbar1">

                            <div class="dropdown1">

                                <button class="dropbtn1" style=" color: rgba(255, 255, 255, 0.5);">


                                    <span class="material-icons">
                                        toc
                                    </span>

                                </button>

                                <div class="dropdown1-content1">

                                    <ul class="navbar1">
                                        <li>@Html.ActionLink("Administrar Catalogos", "Admin_Catalogos", "TbCatalogos", null, new { @class = "nav-link" })</li>
                                        <li>@Html.ActionLink("Administrar Fotos", "Admin_Fotos", "TbFotos", null, new { @class = "nav-link" })</li>
                                        <li>@Html.ActionLink("Administrar Catalogos Fotos", "Admin_Catalogos_Fotos", "TbCatalogos_Fotos", null, new { @class = "nav-link" })</li>
                                        <li>@Html.ActionLink("Administrar Permisos", "Admin_Permisos", "TbPermisos", null, new { @class = "nav-link" })</li>
                                        <li>@Html.ActionLink("Administrar Roles", "Admin_Roles", "TbRoles", null, new { @class = "nav-link" })</li>
                                        <li>@Html.ActionLink("Administrar Permisos de Roles", "Admin_Roles_Permisos", "TbRoles_TbPermisos", null, new { @class = "nav-link" })</li>
                                        <li>@Html.ActionLink("Administrar Usuarios", "Admin_Users", "TbUsuarios", null, new { @class = "nav-link" })</li>

                                        <li>@Html.ActionLink("Administrar Servicios", "Admin_Servicios", "TbServicios", null, new { @class = "nav-link" })</li>



                                    </ul>

                                </div>


                            </div>


                        </div>

                        <div class="col-xs-5">
                            <h2>Administrar <b>Servicios</b></h2>
                        </div>

                        <div class="col-xs-7">

                            <a href="@Url.Action( "Create", "TbServicios")" class="btn btn-primary">
                                <i class="material-icons">&#xE147;</i>
                                <span>
                                    Agregar Nuevo Servicio
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.precio)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IDCatalogo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.detalle)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.estado)
                            </th>

                            <th>Accion</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IDCatalogo)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.detalle)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.estado)
                    </td>





                    <td>




                        @*@Html.ActionLink("Edit", "Edit", "Usuario", new { id = @Html.DisplayFor(model => item.IDUsuario) }, null)
                        *@<a href="@Url.Action( "Edit", "Tbservicios", new { id = @Html.DisplayFor(model => item.IDServicio) })" class="settings" title="Editar" data-toggle="tooltip" value="Editar">
                            <span class="material-icons">edit</span>
                        </a>


                        <a href="@Url.Action( "Delete", "TbServicios",new { id = @Html.DisplayFor(model => item.IDServicio) })" class="delete" title="Borrar" data-toggle="tooltip">
                            <i class="material-icons">&#xE5C9;</i>
                        </a>
                    </td>

                </tr>
                    }
                </table>
                <div class="clearfix">

                    <ul class="pagination">
                        <li class="page-item disabled"><a href="#">Anterior</a></li>
                        <li class="page-item active"><a href="#" class="page-link">1</a></li>
                        <li class="page-item"><a href="#" class="page-link">2</a></li>
                        <li class="page-item "><a href="#" class="page-link">3</a></li>
                        <li class="page-item"><a href="#" class="page-link">4</a></li>
                        <li class="page-item"><a href="#" class="page-link">5</a></li>
                        <li class="page-item"><a href="#" class="page-link">Siguiente</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>




