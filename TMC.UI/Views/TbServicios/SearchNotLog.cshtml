

@{
    ViewBag.Title = "Servicios";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model IEnumerable<TMC.DATA.TbServicios>
}
<style>
    .img-card-view {
        width: 100%
    }

    .card-columns {
        column-count: 1;
    }
</style>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Estilos/EstilosGeneral.css">
    <link rel="stylesheet" type="text/css" href="~/Estilos/EstilosAdmin.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
</head>
<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="main-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Servicios</li>
    </ol>
</nav>
<!-- /Breadcrumb -->
@if (TMC.DATA.TbUsuarios.IDRolUsuarioActual == 1)
    {

        Response.Redirect(Url.Action("Admin_Servicios", "TbServicios"));
    }
<body id="estiloAdmin">
    <h5 style="color: black; background-color: #DD969C;width: inherit;height: 100%;text-align: left">
        Servicios Disponibles
    </h5>
    <div class="form-vertical" style="color:black;">
        <div class="card-columns" style="margin-left: 8%; margin-top: 3%;">
            @foreach (var item in Model)
            {
                if (item.estado)
                {
                    <div class="card" style="width: 80%;margin-top: 2%;margin-right: 1%;">
                        <img src="@item.foto" class="img-card-view, img-thumbnail" style="border-radius:45px" />
                        <div class="card-body">
                            <h5 class="card-title">@item.nombre</h5>
                            <p class="card-text">@item.NombreCatalogo</p>
                            <p class="card-text">@item.detalle</p>
                            <p class="card-text" style="font-weight: 800;font-size: 20px;">&#8353;@item.precio</p>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <script src="https://kit.fontawesome.com/065c8b2d38.js" crossorigin="anonymous"></script>
</body>