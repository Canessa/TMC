@model IEnumerable<TMC.DATA.TbServicios>

@{
    ViewBag.Title = "Compras Usuario";
}

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Estilos/EstilosGeneral.css">
    <link rel="stylesheet" type="text/css" href="~/Estilos/EstilosAdmin.css">
    <link rel="stylesheet" type="text/css" href="~/Estilos/EstilosBarraAdmin.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="main-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Compras Usuario</li>

    </ol>
</nav>
<!-- /Breadcrumb -->

<body id="estiloAdmin">
        <div class="col-md-8" style="margin-left: 20%;">
            @foreach (var servicio in Model)
            {
                <div class="row" style="margin-left:0%; margin-top:10px">
                    <div class="container row">
                        <div class="card h-100 col-sm-8">
                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">@servicio.nombre</i></h6>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <h6>@servicio.detalle</h6>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Catalogo</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        #@servicio.IDCatalogo
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Precio</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        &#8353;@servicio.precio
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <button class="btn btn-success" style="width: 100%;height: 70px;">
                                            <a href="@Url.Action( "Delete", "TbCompras",new { id = @Html.DisplayFor(model => servicio.IDServicio) })">
                                                Cancelar
                                            </a>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card h-100 col-sm-4" style="padding: 20px;">
                            <img src="@servicio.foto" style="height: 230px;">
                        </div>
                    </div>
                </div>
            }
            </div>
</body>