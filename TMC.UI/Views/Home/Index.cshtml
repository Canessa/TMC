@{
    ViewBag.Title = "Inicio";
}



<head>


    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Estilos/EstilosGeneral.css">
    <link rel="stylesheet" type="text/css" href="~/Estilos/EstilosAdmin.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">

</head>


@*Imagen Principal*@
<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="main-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Inicio</li>
    </ol>
</nav>
<!-- /Breadcrumb -->

<body id="estiloAdmin">
    <div class="form-horizontal">

        <div class="form-group">

            <div style="text-align:center; position:relative; margin-top:-15px;">

                <img src="~/Imgs/index_1.jpg" style="width:100%;" />

                <div class="MainColor">

                    <h3>TU MAESTRO DE CEREMONIAS</h3>
                    <h6>Más que una boda, una experiencia de vida</h6>

                </div>

            </div>
        </div>
    </div>

    @*Carousel de Servicios*@
    <div class="container" style="margin-top:-80px">
        <div id="carouselServicios" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row">
                        <div class="col">
                            <div class="py-4 text-center">
                                <a href="@Url.Action("Search", "TbServicios")"><img src="https://firebasestorage.googleapis.com/v0/b/bd-tmc.appspot.com/o/fotosServicios%2FCateringService.jpg?alt=media&token=f77f8d82-e416-4352-ac70-5f4499f15607"  class="img-thumbnail"> </a>
                                <br />
                                <a href="@Url.Action("Search", "TbServicios")" class="text-muted">Catering Service</a>
                            </div>
                        </div>
                        <div class="col">
                            <div class="py-4 text-center">
                                <a href="@Url.Action("Search", "TbServicios")"><img src="https://firebasestorage.googleapis.com/v0/b/bd-tmc.appspot.com/o/fotosServicios%2FEstilista.jpg?alt=media&token=970b6de6-2a38-4a73-b322-cad44122fe67" class="img-thumbnail"></a>
                                <a href="@Url.Action("Search", "TbServicios")" class="text-muted">Estilista</a>
                            </div>
                        </div>
                        <div class="col">
                            <div class="py-4 text-center">
                                <a href="@Url.Action("Search", "TbServicios")"><img src="https://firebasestorage.googleapis.com/v0/b/bd-tmc.appspot.com/o/fotosServicios%2FMaquillista.jpg?alt=media&token=ab4258e1-ea19-4f67-b337-7fd439dbea5a" class="img-thumbnail"></a>
                                <a href="@Url.Action("Search", "TbServicios")" class="text-muted">Maquillista</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row">
                        <div class="col">
                            <div class="py-4 text-center">
                                <a href="@Url.Action("Search", "TbServicios")"><img src="https://firebasestorage.googleapis.com/v0/b/bd-tmc.appspot.com/o/fotosServicios%2FModista.jpg?alt=media&token=e05828eb-ee3c-455a-abbf-472f8200d56d" class="img-thumbnail"></a>
                                <a href="@Url.Action("Search", "TbServicios")" class="text-muted">Modista</a>
                            </div>
                        </div>
                        <div class="col">
                            <div class="py-4 text-center">
                                <a href="@Url.Action("Search", "TbServicios")"><img src="~/Imgs/Planificación.jpg" class="img-thumbnail"></a>
                                <a href="@Url.Action("Search", "TbServicios")" class="text-muted">Planificación</a>
                            </div>
                        </div>
                        <div class="col">
                            <div class="py-4 text-center">
                                <a href="@Url.Action("Search", "TbServicios")"><img src="https://firebasestorage.googleapis.com/v0/b/bd-tmc.appspot.com/o/fotosServicios%2FFotografoProfesional.jpg?alt=media&token=d91dd3c2-41e7-47f4-8a9f-86666a8703b3" class="img-thumbnail"></a>
                                <a href="@Url.Action("Search", "TbServicios")" class=" text-muted">Fotógrafo Profesional</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselServicios" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselServicios" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

</body>