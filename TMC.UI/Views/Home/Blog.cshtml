
@model IEnumerable<TMC.DATA.TbTestimonios>
@{

    ViewBag.Title = "Blog";
}


@if (Request.IsAuthenticated)
{

    Response.Redirect(Url.Action("BlogLog", "Home"));
}
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Estilos/EstilosGeneral.css">
    <link rel="stylesheet" type="text/css" href="~/Estilos/EstilosAdmin.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">

</head>


<script src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js"></script>



<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="main-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Noticias</li>
    </ol>
</nav>
<!-- /Breadcrumb -->
<body id="estiloAdmin">
    <div>
        <div class="container" style="color:black;">
            <div class="main-body">
                <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">

                                    <div class="mt-3">
                                        <div class="col-12">
                                            <a href="@Url.Action("Search", "TbServicios")" class="text-muted">Más Información</a>
                                            <br />
                                            <a href="@Url.Action("Search", "TbServicios")"><img src="~/Imgs/boda2.jpg" class="img-thumbnail" style="border-radius:15px"></a>
                                            <br />
                                            <br />
                                            <h5 href="@Url.Action("Search", "TbServicios")">No esperes más por tu ansiada boda </h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card mt-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">

                                        <div class="mt-3">
                                            <div class="col-12">
                                                <a href="@Url.Action("Search", "TbServicios")" class="text-muted">Más Información</a>
                                                <br />
                                                <a href="@Url.Action("Search", "TbServicios")" class="text-muted"><img src="~/Imgs/boda.jpg" class="img-thumbnail" style="border-radius:15px"></a>
                                                <br />
                                                <br />
                                                <h5 href="@Url.Action("Search", "TbServicios")">El amor puede durar para siempre</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h6 class="d-flex justify-content-center mb-3"><i class="material-icons text-info mr-2"></i>Testimonios</h6>


                                @foreach (var item in Model)
                                {
                            <div class="d-flex flex-column align-items-center text-center" style="width: 100%;margin-top: 2%;margin-right: 1%;">
                                <br />
                                <h6 class="justify-content-center text-black">@Html.DisplayFor(modelItem => item.IDUsuario)</h6>
                                <a><img src="~/Imgs/logo.png" class="img-thumbnail" style="border-radius:15px;height:70px"></a>

                                <br />
                                <p class="text-black">@Html.DisplayFor(modelItem => item.testimonio)</p>
                            </div>

                                }

                            </div>
                        </div>


                        <br />

                    </div>
                </div>


            </div>
        </div>
    </div>








</body>